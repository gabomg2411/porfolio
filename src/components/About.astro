---
import CurvedArrow from "./icons/CurvedArrow.astro";

import { getI18n } from "../i18n";

const { currentLocale } = Astro;
const i18n = getI18n(currentLocale);
---

<section class="flex justify-center items-center">
  <CurvedArrow class="size-32 hidden md:block" />
  <h2
    class="text-2xl md:text-3xl pb-12 text-pretty"
    set:html={i18n.ABOUT_NAME}
  />
</section>

<div class="flex flex-col items-center justify-center md:flex-row">
  <img
    class="rounded-full size-56 md:mr-16"
    src="https://img.freepik.com/free-psd/3d-illustration-human-avatar-profile_23-2150671142.jpg"
    alt="profile photo"
  />
  <div>
    <h2
      class="text-4xl text-pretty opacity-80 pt-12 md:pt-0 md:max-w-[600px] md:text-5xl"
    >
      {i18n.ABOUT_TITLE}
    </h2>
    <p
      class="text-xl pt-5 text-wrap opacity-80 max-w-[500px]"
      set:html={i18n.ABOUT_DESCRIPTION}
    />
    <p class="text-xl pt-10 text-wrap opacity-80 max-w-[500px]">
      {i18n.ABOUT_DESCRIPTION_2}
    </p>
  </div>
</div>

<style>
  img {
    background: #fff;
    box-shadow:
      0px 0px 40px 1px #ffffffbe,
      0px 0px 90px 20px #763cac;
  }
</style>
