---
import { getI18n } from "../i18n";
import LanguageSelection from "./LanguageSelection.astro";

const { currentLocale } = Astro;
const i18n = getI18n(currentLocale);
---

<header
  class="flex justify-center items-center max-w-full max-h-20 sticky top-0 z-30"
>
  <nav
    class="flex flex-row gap-3 text-xs md:gap-6 xl:gap-8 px-5 xl:px-10 py-2 w-full items-center justify-center"
  >
    <a
      href="#home"
      class="rounded-full p-2 hover:scale-110 hover:bg-white/10 transition"
      >{i18n.HEADER_ITEM_1}</a
    >
    <a
      href="#about"
      class="rounded-full p-2 hover:scale-110 hover:bg-white/10 transition"
      >{i18n.HEADER_ITEM_2}</a
    >
    <a
      href="#experiences"
      class="rounded-full p-2 hover:scale-110 hover:bg-white/10 transition"
      >{i18n.HEADER_ITEM_2}</a
    >
    <a
      href="#skills"
      class="rounded-full p-2 hover:scale-110 hover:bg-white/10 transition"
      >{i18n.HEADER_ITEM_3}</a
    >
    <a
      href="#proyects"
      class="rounded-full p-2 hover:scale-110 hover:bg-white/10 transition"
      >{i18n.HEADER_ITEM_4}</a
    >
    <a
      href="#contact"
      class="rounded-full p-2 hover:scale-110 hover:bg-white/10 transition"
      >{i18n.HEADER_ITEM_5}</a
    >
    <LanguageSelection />
  </nav>
</header>

<style>
  nav {
    animation: nav-shadown linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }
  @keyframes nav-shadown {
    to {
      @apply bg-header;
    }
  }
</style>
